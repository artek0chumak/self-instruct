{
    "output_dir": "gpt-j-6b-5v",
    "logging_steps": 10,
    "report_to": "wandb",
    "fp16": true,
    "per_device_train_batch_size": 4,
    "gradient_accumulation_steps": 8,
    "save_steps": 128,
    "gradient_checkpointing": false,
    "weight_decay": 1e-2,
    "deepspeed": {
        "zero_optimization": {
            "stage": 3,
            "offload_optimizer": {
                "device": "cpu"
            }
        },
        "fp16": {
            "enabled": "auto",
            "loss_scale": 0,
            "loss_scale_window": 1000,
            "initial_scale_power": 10,
            "hysteresis": 2,
            "min_loss_scale": 1
        },
        "optimizer": {
            "type": "AdamW",
            "params": {
              "lr": 0.0001,
              "betas": [
                0.8,
                0.999
              ],
              "eps": 1e-8,
              "weight_decay": 3e-7,
              "torch_adam": true
            }
        },
        "gradient_accumulation_steps": "auto",
        "train_micro_batch_size_per_gpu": "auto",
        "zero_allow_untested_optimizer": true
    }
}